<Page x:Class="SendMessage.PageContactSelect"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SendMessage"
      mc:Ignorable="d" 
      d:DesignHeight="498" d:DesignWidth="773"
      Title="PageContactSelect">

    <Grid Background="AliceBlue">
        <Button Margin="272,430,272,10" Content="Отобрать контакты" Click="Button_Click"/>
        <DataGrid x:Name="dataStud" AutoGenerateColumns="False"  Margin="41,55,30,207"  FontFamily="Century Gothic" >
            <DataGrid.Columns>

                <DataGridTextColumn Header="Логин пользователя" Binding="{Binding userName }" Width="350"/>
                <DataGridCheckBoxColumn Header="Группировка" Binding="{Binding CheckBoxColumn}" Width="350"/>

            </DataGrid.Columns>


        </DataGrid>
    </Grid>
</Page>
