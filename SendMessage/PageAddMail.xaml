<Page x:Class="SendMessage.PageAddMail"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SendMessage"
      mc:Ignorable="d" 
     d:DesignHeight="498" d:DesignWidth="773"

      Title="PageAddMail">

    <Grid Background="AliceBlue">
        <Button Content="Добавить почту" Margin="264,418,264,24" Click="Button_Click"/>
        <DataGrid x:Name="dataMail" AutoGenerateColumns="False"  Margin="10,140,10,138"  FontFamily="Century Gothic" >
            <DataGrid.Columns>

                <DataGridTextColumn Header="Логин пользователя" Binding="{Binding userName }" Width="350"/>
                <DataGridTextColumn Header="ID чата" Binding="{Binding Mail }" Width="500"/>

            </DataGrid.Columns>


        </DataGrid>
    </Grid>
</Page>
